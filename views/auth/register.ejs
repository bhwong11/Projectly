<%- include("../partials/header.ejs") %>
<body class="main-body___register">
    <div class="image-container___register">
        <div class="carousel slide" data-bs-ride="carousel">
            <h2>Check out the app before you join!</h2>
            <p>Create project boards, add tasks, get organized!</p>
            <div class="carousel-inner">

                <div class="carousel-item active">
                    <img src="https://i.imgur.com/XGDaNp7.png" class="d-block w-100" alt="app screenshot">
                </div>

                <div class="carousel-item">
                    <img src="https://i.imgur.com/0Rs6cZa.png" class="d-block w-100" alt="app screenshot">
                </div>

                <div class="carousel-item">
                    <img src="https://i.imgur.com/qWgA1bJ.png" class="d-block w-100" alt="app screenshot">
                </div>

            </div>

        </div>
    </div>
    <div class="form-container___register">
        <h3 id="form-title___register">Create project boards, add tasks, get organized!</h3>
        <%if(err){%>
            <p><%= err %></p>
        <% } %>
        <form method="POST" action="/register">

            <label for="username-field">User name</label>
            <input type="text" name="username" id="username-field" placeholder="Johnny Appleseed">
            
            <label for="email-field">Email</label>
            <input type="email" name="email" id="email-field" placeholder="Johnny@bigapples.com">

            <label for="password-field">Password</label>
            <input type="password" name="password" id="password-field">

            <button type="submit">Register</button>
            <a href="/login">Already have an account?</a>
        </form>
    </div>
</body>
</html>