<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navbar.ejs')%>

<body>
    <%-include('../../partials/error.ejs')%>
    <div class = "task_screen task-card-indivual task-edit-container">
    <form action="/tasks/<%=task.id%>?_method=PUT" method="POST">
        <h1>Edit Task!</h1>
        <label for="task-name">task name</label>
        <input type="text" id="task-name" name = "name" placeholder="task name"
        value ="<%=task.name%>"
        required>
        <label for="task-content">task information</label>
        <textarea 
        name="content" 
        id="task-content" 
        cols="30" 
        rows="5" 
        required>
        <%=task.content%>
    </textarea>
        <label for="task-dueDate">due date</label>
        <input 
        type="datetime-local" id="task-dueDate" name="dueDate"
        value = "<%=task.dueDate.toISOString().split('.')[0]%>"
        >
        <input type="hidden" name="board" value ="<%=task.board%>">
        <div class="button-task-container___edit">
        <button><a href="/tasks/<%=task.id%>"></a>go back to task</a></button>
        <button>submit</button>
    </div>
    </form>
</div>
    
</body>
</html>