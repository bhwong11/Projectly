<%-include('../../partials/header.ejs')%>
<style>
    *{
        margin:0;
        padding:0;
        box-sizing: border-box;
    }
    :root{
        --primary: #5EAAA8;
        --secondary: #A3D2CA;
        --beige: #F7F3E9;
        --orange: #F05945;
    }
    body{
        max-height: 90vh;
        font-size: 16px;
    }
    .task-edit-container{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    form{
        display: grid;
        padding: 3vh 7vw;
        margin: 5vh 5vw;
        background-color: var(--beige);
        border-radius: 10px;
        overflow: hidden;
    }
    form *{
        padding: 1vh;
    }
    form h1{
        color:var(--primary)
    }
    label{
        font-size: 1.5rem;
        color: var(--primary);
    }
    input{
        border-radius: 5px;
    }
    textarea{
        border-radius: 5px;
    }
    select{
        border-radius: 5px;
    }
    button{
        margin-top: 2vh;
        border-radius: 10px;
        background-color: var(--orange);
        color: var(--beige);
    }
</style>
<body>
    <div class = "task_screen task-card task-edit-container">
    <form action="/tasks/<%=task.id%>?_method=PUT" method="POST">
        <h1>Edit Task!</h1>
        <label for="task-name">task name</label>
        <input type="text" id="task-name" name = "name" placeholder="task name"
        value ="<%=task.name%>">
        <label for="task-content">task information</label>
        <textarea name="content" id="task-content" cols="30" rows="10"><%=task.content%></textarea>
        <label for="task-dueDate">due date</label>
        <input type="date" id="task-dueDate" name="dueDate"
        value ="<%=task.dueDate%>">
        <input type="hidden" name="board" value ="<%=task.board%>">

        <button>submit</button>
    </form>
</div>
    
</body>
</html>