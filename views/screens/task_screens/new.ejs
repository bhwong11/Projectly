<body>
    <div class = "task_screen task-card-indivual task-new-container">
    <form action="/tasks" method="POST">
        <h1>New Task</h1>
        <label for="task-name">enter name</label>
        <input type="text" id="task-name" name = "name" placeholder="task name">
        <label for="task-content">task information</label>
        <textarea name="content" id="task-content" cols="30" rows="10" placeholder="enter task information"></textarea>
        <label for="task-dueDate">due date</label>
        <input type="date" id="task-dueDate" name="dueDate">
        <label for="task-board">enter board</label>
        <select name="board" id="task-board">
            <%for (let board of boards){%>
                <option value="<%=board.id%>"><%=board.name%></option>
                
                <%}%>
            
        </select>

        <button>submit</button>
    </form>
</div>
    
</body>
</html>