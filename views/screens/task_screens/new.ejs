<%-include('../../partials/header.ejs')%>
<%-include('../../partials/navbar.ejs')%>
<style>
    :root{
        --primary: #5EAAA8;
        --secondary: #A3D2CA;
        --beige: #F7F3E9;
        --orange: #F05945;
    }
    .error-message{
        color: blue;
        height: 1vh;
        background-color: lighten(var(--orange), 50%);
    }
</style>
<body>
    <%if(error){%>
        <div class="error-message">
            <%=error.message%>
        </div>
   <%}%>
    <div class = "task_screen task-card-indivual task-new-container">
    <form action="/tasks" method="POST">
        <h1>New Task</h1>
        <label for="task-name">enter name</label>
        <input type="text" id="task-name" name = "name" placeholder="task name" required>
        <label for="task-content">task information</label>
        <textarea name="content" id="task-content" cols="30" rows="10" placeholder="enter task information" required></textarea>
        <label for="task-dueDate">due date</label>
        <input type="date" id="task-dueDate" name="dueDate" required>
        <label for="task-board">enter board</label>
        <select name="board" id="task-board" required>
            <%for (let board of boards){%>
                <option value="<%=board.id%>"><%=board.name%></option>
                
                <%}%>
            
        </select>

        <button>submit</button>
    </form>
</div>
    
</body>
</html>