<%- include("../partials/header.ejs") %>
<style>
    *{
        margin:0;
        padding:0;
        box-sizing: border-box;
    }
    :root{
        --primary: #5EAAA8;
        --secondary: #A3D2CA;
        --beige: #F7F3E9;
        --orange: #F05945;
    }
    main{
        margin-top: 10px;
    }
    main h3 {
        color: var(--primary);
    }
    .new-board___container {
        margin: 15px 2vw;
    }
    .new-board___button button {
        background-color: var(--secondary);
        color: var(--beige);
        padding: 5px 7px;
        border: 1px solid;
        border-radius: 3px;
    }
    .new-board___button button:hover {
        cursor: pointer;
    }
</style>
<body>
    <!-- Navbar -->
    <%- include("../partials/navbar.ejs") %>

    <main>
        <% if(boards){ %>
            <% for(let ii = 0; ii < boards.length; ii++) { %>
                <% const board = boards[ii] %>
                <%- include("../partials/board.ejs", {name: board.name, id: board._id}) %>
            <% } %>
        <% } else { %>
            <h5>Create a board to get started!</h5>
        <% } %>
    
        <div class="new-board___container">
            <hr>
            <h3>Make a new board?</h3>
            <form class="new-board___button" action="/boards/new" method="GET">
                <button type="submit">new board</button>
            </form>
        </div>
    </main>
    
</body>
</html>